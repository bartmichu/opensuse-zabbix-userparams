Defaults:zabbix !requiretty

Defaults!ZYPPER_PS !logfile, !syslog, !pam_session
Defaults!ZYPPER_LISTPATCHES !logfile, !syslog, !pam_session
Defaults!ZYPPER_LISTCRITICALPATCHES !logfile, !syslog, !pam_session

Cmnd_Alias ZYPPER_PS = /usr/bin/zypper ps -sss
Cmnd_Alias ZYPPER_LISTPATCHES = /usr/bin/zypper --no-refresh list-patches
Cmnd_Alias ZYPPER_LISTCRITICALPATCHES = /usr/bin/zypper --no-refresh list-patches --severity critical

zabbix ALL=(root) NOPASSWD: ZYPPER_PS, ZYPPER_LISTPATCHES, ZYPPER_LISTCRITICALPATCHES
